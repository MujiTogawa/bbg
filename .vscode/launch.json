{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "带调试工具运行bbg",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "直接运行bbg",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "打开开发者面板",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "panel"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    }
  ]
}
